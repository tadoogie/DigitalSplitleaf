<text>
    <body>
        <div type="poem" met="6.6.8.6.">
            <lg type="verse" n="1">
                <l>
                    <seg type="syl" n="1">1. Be-</seg>
                    <seg type="syl" n="2">hold,</seg>
                    <seg type="syl" n="3">and</seg>
                    <seg type="syl" n="4">have</seg>
                    <seg type="syl" n="5">re-</seg>
                    <seg type="syl" n="6">gard,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">ye</seg>
                    <seg type="syl" n="2">ser-</seg>
                    <seg type="syl" n="3">vants</seg>
                    <seg type="syl" n="4">of</seg>
                    <seg type="syl" n="5">the</seg>
                    <seg type="syl" n="6">Lord,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">Which</seg>
                    <seg type="syl" n="2">in</seg>
                    <seg type="syl" n="3">his</seg>
                    <seg type="syl" n="4">house</seg>
                    <seg type="syl" n="5">by</seg>
                    <seg type="syl" n="6">night</seg>
                    <seg type="syl" n="7">do</seg>
                    <seg type="syl" n="8">watch,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">praise</seg>
                    <seg type="syl" n="2">him</seg>
                    <seg type="syl" n="3">with</seg>
                    <seg type="syl" n="4">one</seg>
                    <seg type="syl" n="5">ac-</seg>
                    <seg type="syl" n="6">cord.</seg>
                </l>
            </lg>
            <lg type="verse" n="2">
                <l>
                    <seg type="syl" n="1">2. Lift</seg>
                    <seg type="syl" n="2">up</seg>
                    <seg type="syl" n="3">your</seg>
                    <seg type="syl" n="4">hands</seg>
                    <seg type="syl" n="5">on</seg>
                    <seg type="syl" n="6">high,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">un-</seg>
                    <seg type="syl" n="2">to</seg>
                    <seg type="syl" n="3">his</seg>
                    <seg type="syl" n="4">ho-</seg>
                    <seg type="syl" n="5">ly</seg>
                    <seg type="syl" n="6">place:</seg>
                </l>
                <l>
                    <seg type="syl" n="1">And</seg>
                    <seg type="syl" n="2">give</seg>
                    <seg type="syl" n="3">the</seg>
                    <seg type="syl" n="4">Lord</seg>
                    <seg type="syl" n="5">his</seg>
                    <seg type="syl" n="6">prais-</seg>
                    <seg type="syl" n="7">es</seg>
                    <seg type="syl" n="8">due:</seg>
                </l>
                <l>
                    <seg type="syl" n="1">his</seg>
                    <seg type="syl" n="2">ben-</seg>
                    <seg type="syl" n="3">e-</seg>
                    <seg type="syl" n="4">fits</seg>
                    <seg type="syl" n="5">em-</seg>
                    <seg type="syl" n="6">brace.</seg>
                </l>
            </lg>
            <lg type="verse" n="3">
                <l>
                    <seg type="syl" n="1">3. For</seg>
                    <seg type="syl" n="2">why?</seg>
                    <seg type="syl" n="3">The</seg>
                    <seg type="syl" n="4">Lord,</seg>
                    <seg type="syl" n="5">who</seg>
                    <seg type="syl" n="6">did</seg>
                </l>
                <l>
                    <seg type="syl" n="1">both</seg>
                    <seg type="syl" n="2">earth</seg>
                    <seg type="syl" n="3">and</seg>
                    <seg type="syl" n="4">heav-</seg>
                    <seg type="syl" n="5">en</seg>
                    <seg type="syl" n="6">frame,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">Doth</seg>
                    <seg type="syl" n="2">Zi-</seg>
                    <seg type="syl" n="3">on</seg>
                    <seg type="syl" n="4">bless,</seg>
                    <seg type="syl" n="5">and</seg>
                    <seg type="syl" n="6">will</seg>
                    <seg type="syl" n="7">con-</seg>
                    <seg type="syl" n="8">serve</seg>
                </l>
                <l>
                    <seg type="syl" n="1">for-</seg>
                    <seg type="syl" n="2">ev-</seg>
                    <seg type="syl" n="3">er-</seg>
                    <seg type="syl" n="4">more</seg>
                    <seg type="syl" n="5">the</seg>
                    <seg type="syl" n="6">same.</seg>
                </l>
            </lg>
