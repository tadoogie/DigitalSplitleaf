<text>
    <body>
        <div type="poem" met="8.8.8.8.">
            <lg type="verse" n="1-2">
                <l>
                    <seg type="syl" n="1">1. Save</seg>
                    <seg type="syl" n="2">me,</seg>
                    <seg type="syl" n="3">O</seg>
                    <seg type="syl" n="4">God,</seg>
                    <seg type="syl" n="5">for</seg>
                    <seg type="syl" n="6">thy</seg>
                    <seg type="syl" n="7">name's</seg>
                    <seg type="syl" n="8">sake,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">And</seg>
                    <seg type="syl" n="2">by</seg>
                    <seg type="syl" n="3">thy</seg>
                    <seg type="syl" n="4">grace</seg>
                    <seg type="syl" n="5">my</seg>
                    <seg type="syl" n="6">cause</seg>
                    <seg type="syl" n="7">de-</seg>
                    <seg type="syl" n="8">fend.</seg>
                </l>
                <l>
                    <seg type="syl" n="1">2. Oh,</seg>
                    <seg type="syl" n="2">hear</seg>
                    <seg type="syl" n="3">my</seg>
                    <seg type="syl" n="4">pray-</seg>
                    <seg type="syl" n="5">ers</seg>
                    <seg type="syl" n="6">which</seg>
                    <seg type="syl" n="7">I</seg>
                    <seg type="syl" n="8">make,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">And</seg>
                    <seg type="syl" n="2">let</seg>
                    <seg type="syl" n="3">my</seg>
                    <seg type="syl" n="4">words</seg>
                    <seg type="syl" n="5">to</seg>
                    <seg type="syl" n="6">thee</seg>
                    <seg type="syl" n="7">as-</seg>
                    <seg type="syl" n="8">cend.</seg>
                </l>
            </lg>
            <lg type="verse" n="3">
                <l>
                    <seg type="syl" n="1">3. For</seg>
                    <seg type="syl" n="2">stran-</seg>
                    <seg type="syl" n="3">gers</seg>
                    <seg type="syl" n="4">do</seg>
                    <seg type="syl" n="5">a-</seg>
                    <seg type="syl" n="6">gainst</seg>
                    <seg type="syl" n="7">me</seg>
                    <seg type="syl" n="8">rise,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">and</seg>
                    <seg type="syl" n="2">ty-</seg>
                    <seg type="syl" n="3">rants</seg>
                    <seg type="syl" n="4">seek</seg>
                    <seg type="syl" n="5">my</seg>
                    <seg type="syl" n="6">soul</seg>
                    <seg type="syl" n="7">to</seg>
                    <seg type="syl" n="8">spill:</seg>
                </l>
                <l>
                    <seg type="syl" n="1">They</seg>
                    <seg type="syl" n="2">set</seg>
                    <seg type="syl" n="3">not</seg>
                    <seg type="syl" n="4">God</seg>
                    <seg type="syl" n="5">be-</seg>
                    <seg type="syl" n="6">fore</seg>
                    <seg type="syl" n="7">their</seg>
                    <seg type="syl" n="8">eyes,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">But</seg>
                    <seg type="syl" n="2">bent</seg>
                    <seg type="syl" n="3">to</seg>
                    <seg type="syl" n="4">please</seg>
                    <seg type="syl" n="5">their</seg>
                    <seg type="syl" n="6">will-</seg>
                    <seg type="syl" n="7">ful</seg>
                    <seg type="syl" n="8">will.</seg>
                </l>
            </lg>
            <lg type="verse" n="4-5">
                <l>
                    <seg type="syl" n="1">4. Be-</seg>
                    <seg type="syl" n="2">hold,</seg>
                    <seg type="syl" n="3">God</seg>
                    <seg type="syl" n="4">is</seg>
                    <seg type="syl" n="5">mine</seg>
                    <seg type="syl" n="6">help</seg>
                    <seg type="syl" n="7">and</seg>
                    <seg type="syl" n="8">stay,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">And</seg>
                    <seg type="syl" n="2">is</seg>
                    <seg type="syl" n="3">with</seg>
                    <seg type="syl" n="4">such</seg>
                    <seg type="syl" n="5">as</seg>
                    <seg type="syl" n="6">do</seg>
                    <seg type="syl" n="7">me</seg>
                    <seg type="syl" n="8">aid.</seg>
                </l>
                <l>
                    <seg type="syl" n="1">5. My</seg>
                    <seg type="syl" n="2">foes</seg>
                    <seg type="syl" n="3">dis-</seg>
                    <seg type="syl" n="4">pite</seg>
                    <seg type="syl" n="5">he</seg>
                    <seg type="syl" n="6">will</seg>
                    <seg type="syl" n="7">re-</seg>
                    <seg type="syl" n="8">pay:</seg>
                </l>
                <l>
                    <seg type="syl" n="1">Oh,</seg>
                    <seg type="syl" n="2">cut</seg>
                    <seg type="syl" n="3">them</seg>
                    <seg type="syl" n="4">off</seg>
                    <seg type="syl" n="5">as</seg>
                    <seg type="syl" n="6">thou</seg>
                    <seg type="syl" n="7">hast</seg>
                    <seg type="syl" n="8">said.</seg>
                </l>
            </lg>
            <lg type="verse" n="6">
                <l>
                    <seg type="syl" n="1">6. Then</seg>
                    <seg type="syl" n="2">sac-</seg>
                    <seg type="syl" n="3">ri-</seg>
                    <seg type="syl" n="4">fice,</seg>
                    <seg type="syl" n="5">O</seg>
                    <seg type="syl" n="6">Lord,</seg>
                    <seg type="syl" n="7">will</seg>
                    <seg type="syl" n="8">I</seg>
                </l>
                <l>
                    <seg type="syl" n="1">Pre-</seg>
                    <seg type="syl" n="2">sent</seg>
                    <seg type="syl" n="3">full</seg>
                    <seg type="syl" n="4">free-</seg>
                    <seg type="syl" n="5">ly</seg>
                    <seg type="syl" n="6">in</seg>
                    <seg type="syl" n="7">thy</seg>
                    <seg type="syl" n="8">sight,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">And</seg>
                    <seg type="syl" n="2">will</seg>
                    <seg type="syl" n="3">thy</seg>
                    <seg type="syl" n="4">Name</seg>
                    <seg type="syl" n="5">still</seg>
                    <seg type="syl" n="6">mag-</seg>
                    <seg type="syl" n="7">nif-</seg>
                    <seg type="syl" n="8">y,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">Be-</seg>
                    <seg type="syl" n="2">cause</seg>
                    <seg type="syl" n="3">it</seg>
                    <seg type="syl" n="4">is</seg>
                    <seg type="syl" n="5">both</seg>
                    <seg type="syl" n="6">good</seg>
                    <seg type="syl" n="7">and</seg>
                    <seg type="syl" n="8">right.</seg>
                </l>
            </lg>
            <lg type="verse" n="7">
                <l>
                    <seg type="syl" n="1">7. For</seg>
                    <seg type="syl" n="2">he</seg>
                    <seg type="syl" n="3">me</seg>
                    <seg type="syl" n="4">brought</seg>
                    <seg type="syl" n="5">from</seg>
                    <seg type="syl" n="6">trou-</seg>
                    <seg type="syl" n="7">bles</seg>
                    <seg type="syl" n="8">great,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">And</seg>
                    <seg type="syl" n="2">kept</seg>
                    <seg type="syl" n="3">me</seg>
                    <seg type="syl" n="4">from</seg>
                    <seg type="syl" n="5">their</seg>
                    <seg type="syl" n="6">rag-</seg>
                    <seg type="syl" n="7">ing</seg>
                    <seg type="syl" n="8">ire:</seg>
                </l>
                <l>
                    <seg type="syl" n="1">Yea,</seg>
                    <seg type="syl" n="2">on</seg>
                    <seg type="syl" n="3">my</seg>
                    <seg type="syl" n="4">foes</seg>
                    <seg type="syl" n="5">which</seg>
                    <seg type="syl" n="6">did</seg>
                    <seg type="syl" n="7">me</seg>
                    <seg type="syl" n="8">threat,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">Mine</seg>
                    <seg type="syl" n="2">eyes</seg>
                    <seg type="syl" n="3">have</seg>
                    <seg type="syl" n="4">seen</seg>
                    <seg type="syl" n="5">mine</seg>
                    <seg type="syl" n="6">heart's</seg>
                    <seg type="syl" n="7">de-</seg>
                    <seg type="syl" n="8">sire.</seg>
                </l>
            </lg>           
        </div>
    </body>
</text>
