                    <seg type="syl" n="2">mas-</seg>
                    <seg type="syl" n="3">ter's</seg>
                    <seg type="syl" n="4">hands</seg>
                    <seg type="syl" n="5">to</seg>
                    <seg type="syl" n="6">see.</seg>
                </l>
            </lg>
            <lg type="verse" n="2">
                <l>
                    <seg type="syl" n="1">2. As</seg>
                    <seg type="syl" n="2">hand-</seg>
                    <seg type="syl" n="3">maids</seg>
                    <seg type="syl" n="4">watch</seg>
                    <seg type="syl" n="5">their</seg>
                    <seg type="syl" n="6">mas-</seg>
                    <seg type="syl" n="7">ter's</seg>
                    <seg type="syl" n="8">hands,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">some</seg>
                    <seg type="syl" n="2">grace</seg>
                    <seg type="syl" n="3">for</seg>
                    <seg type="syl" n="4">to</seg>
                    <seg type="syl" n="5">a-</seg>
                    <seg type="syl" n="6">chieve:</seg>
                </l>
                <l>
                    <seg type="syl" n="1">So</seg>
                    <seg type="syl" n="2">we</seg>
                    <seg type="syl" n="3">be-</seg>
                    <seg type="syl" n="4">hold</seg>
                    <seg type="syl" n="5">the</seg>
                    <seg type="syl" n="6">Lord</seg>
                    <seg type="syl" n="7">our</seg>
                    <seg type="syl" n="8">God,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">till</seg>
                    <seg type="syl" n="2">he</seg>
                    <seg type="syl" n="3">do</seg>
                    <seg type="syl" n="4">us</seg>
                    <seg type="syl" n="5">for-</seg>
                    <seg type="syl" n="6">give.</seg>
                </l>
            </lg>
            <lg type="verse" n="3">
                <l>
                    <seg type="syl" n="1">3. Lord,</seg>
                    <seg type="syl" n="2">grant</seg>
                    <seg type="syl" n="3">us</seg>
                    <seg type="syl" n="4">thy</seg>
                    <seg type="syl" n="5">com-</seg>
                    <seg type="syl" n="6">pas-</seg>
                    <seg type="syl" n="7">si-</seg>
