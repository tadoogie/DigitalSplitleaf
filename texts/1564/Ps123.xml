                    <seg type="syl" n="4">and</seg>
                    <seg type="syl" n="5">des-</seg>
                    <seg type="syl" n="6">pite.</seg>
                </l>
            </lg>
            <lg type="verse" n="4">
                <l>
                    <seg type="syl" n="1">4. Our</seg>
                    <seg type="syl" n="2">minds</seg>
                    <seg type="syl" n="3">be</seg>
                    <seg type="syl" n="4">stuffed</seg>
                    <seg type="syl" n="5">with</seg>
                    <seg type="syl" n="6">great</seg>
                    <seg type="syl" n="7">re-</seg>
                    <seg type="syl" n="8">buke:</seg>
                </l>
                <l>
                    <seg type="syl" n="1">the</seg>
                    <seg type="syl" n="2">rich</seg>
                    <seg type="syl" n="3">and</seg>
                    <seg type="syl" n="4">world-</seg>
                    <seg type="syl" n="5">ly</seg>
                    <seg type="syl" n="6">wise:</seg>
                </l>
                <l>
                    <seg type="syl" n="1">Do</seg>
                    <seg type="syl" n="2">make</seg>
                    <seg type="syl" n="3">of</seg>
                    <seg type="syl" n="4">us</seg>
                    <seg type="syl" n="5">their</seg>
                    <seg type="syl" n="6">mock-</seg>
                    <seg type="syl" n="7">ing</seg>
                    <seg type="syl" n="8">stock,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">the</seg>
                    <seg type="syl" n="2">proud</seg>
                    <seg type="syl" n="3">do</seg>
                    <seg type="syl" n="4">us</seg>
                    <seg type="syl" n="5">des-</seg>
                    <seg type="syl" n="6">pise.</seg>
