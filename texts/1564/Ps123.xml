                    <seg type="syl" n="2">lift</seg>
                    <seg type="syl" n="3">mine</seg>
                    <seg type="syl" n="4">yes</seg>
                    <seg type="syl" n="5">to</seg>
                    <seg type="syl" n="6">thee:</seg>
                </l>
                <l>
