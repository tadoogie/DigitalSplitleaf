<text>
    <body>
        <div type="poem" met="8.8.8.8.8.8.">
             <lg type="verse" n="1-2">
                <l>
                    <seg type="syl" n="1">1. O</seg>
                    <seg type="syl" n="2">Praise</seg>
                    <seg type="syl" n="3">the</seg>
                    <seg type="syl" n="4">Lord,</seg>
                    <seg type="syl" n="5">ye</seg>
                    <seg type="syl" n="6">na-</seg>
                    <seg type="syl" n="7">tions</seg>
                    <seg type="syl" n="8">all,</seg>
                </l>
                <l>
                    <seg type="syl" n="1">laud</seg>
                    <seg type="syl" n="2">him</seg>
                    <seg type="syl" n="3">ye</seg>
                    <seg type="syl" n="4">peo-</seg>
                    <seg type="syl" n="5">ple</seg>
                    <seg type="syl" n="6">great</seg>
                    <seg type="syl" n="7">and</seg>
                    <seg type="syl" n="8">small.</seg>
                </l>
                <l>
                    <seg type="syl" n="1">2. For</seg>
                    <seg type="syl" n="2">why?</seg>
                    <seg type="syl" n="3">His</seg>
                    <seg type="syl" n="4">grace</seg>
                    <seg type="syl" n="5">and</seg>
                    <seg type="syl" n="6">ten-</seg>
                    <seg type="syl" n="7">der</seg>
                    <seg type="syl" n="8">love:</seg>
                </l>
                <l>
                    <seg type="syl" n="1">To</seg>
                    <seg type="syl" n="2">us</seg>
                    <seg type="syl" n="3">is</seg>
                    <seg type="syl" n="4">great,</seg>
                    <seg type="syl" n="5">as</seg>
                    <seg type="syl" n="6">we</seg>
                    <seg type="syl" n="7">well</seg>
                    <seg type="syl" n="8">prove.</seg>
                </l>
                <l>
                    <seg type="syl" n="1">His</seg>
                    <seg type="syl" n="2">truth</seg>
                    <seg type="syl" n="3">is</seg>
                    <seg type="syl" n="4">con-</seg>
                    <seg type="syl" n="5">stant</seg>
                    <seg type="syl" n="6">ev-</seg>
                    <seg type="syl" n="7">er-</seg>
                    <seg type="syl" n="8">more.</seg>
                </l>
                <l>
                    <seg type="syl" n="1">Un-</seg>
                    <seg type="syl" n="2">to</seg>
                    <seg type="syl" n="3">the</seg>
                    <seg type="syl" n="4">Lord,</seg>
                    <seg type="syl" n="5">sing</seg>
                    <seg type="syl" n="6">praise</seg>
                    <seg type="syl" n="7">there-</seg>
                    <seg type="syl" n="8">fore.</seg>
                </l>
            </lg>
        </div>
